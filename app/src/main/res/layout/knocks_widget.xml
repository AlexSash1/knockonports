<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWidgetBackground"
    android:padding="@dimen/widget_margin"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/widget_left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/prev_sequence"
        android:tint="@color/colorWidgetButtons"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"/>
    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorWidgetForeground"
        android:textSize="24sp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="normal"/>
    <ImageView
        android:id="@+id/widget_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/next_sequence"
        android:tint="@color/colorWidgetButtons"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>

</LinearLayout>