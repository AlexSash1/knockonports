<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/cfg_side_margin"
    android:layout_marginStart="@dimen/cfg_side_margin"
    android:layout_marginRight="@dimen/cfg_side_margin"
    android:layout_marginEnd="@dimen/cfg_side_margin">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tabs_settings"/>


</LinearLayout>
